<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobal_TT"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#2c3e50"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title="Thông Tin"
        app:titleTextColor="@color/white">

    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_wave__2_" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten"
            android:textSize="30dp"
            android:textColor="#2980b9"
            android:textStyle="bold|italic"
            android:id="@+id/view_ten"
            android:layout_margin="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bộ phận dùng"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:id="@+id/view_boPhan"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên thường gọi"
            android:textSize="30dp"
            android:textColor="#27ae60"
            android:textStyle="bold"
            android:id="@+id/view_tenTG"
            android:layout_margin="30dp"/>

    </LinearLayout>

</RelativeLayout>