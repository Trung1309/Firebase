<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgr_dn_dk"
    tools:context=".DangKi_Activity">

    <TextView
        android:id="@+id/tv_DangKi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="30dp"
        android:text="ĐĂNG KÍ"
        android:textColor="@color/white"
        android:textSize="30sp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tv_DangKi"
        android:id="@+id/ln_ed">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:hint="UserName"
            android:textColorHint="@color/white"
            android:paddingLeft="10dp"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:boxStrokeColor="@color/white"
            app:counterTextColor="@color/white"
            app:startIconDrawable="@drawable/ic_baseline_person_24"
            app:endIconTint="@color/white"
            app:startIconTint="#1abc9c"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_name_dk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:maxLength="20"
                >
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_DangNhap"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:hint="PassWord"
            android:textColorHint="@color/white"
            android:paddingLeft="10dp"
            app:endIconMode="password_toggle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/white"
            app:counterTextColor="@color/white"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:endIconTint="@color/white"
            app:startIconTint="#1abc9c"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_pass_dk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:inputType="textPassword"
                >

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_DangNhap"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:hint="Confirm password"
            android:textColorHint="@color/white"
            android:paddingLeft="10dp"
            app:endIconMode="password_toggle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/white"
            app:counterTextColor="@color/white"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:endIconTint="@color/white"
            app:startIconTint="#1abc9c"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_cfpass_dk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:inputType="textPassword"
                >
            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln_ed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#2ecc71"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Xác nhận"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_dn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_dk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Đăng nhập?"
        android:textColor="@color/white"
        android:textSize="19dp" />

</RelativeLayout>